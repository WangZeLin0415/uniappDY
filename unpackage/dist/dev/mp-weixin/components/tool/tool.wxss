
.tool {
	position: absolute;
	right:10px;
	bottom: 70px;
	z-index: 20;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.author {
	position: relative;
}
.add {
	width:20px;
	height:20px;
	border-radius: 50%;
	background:#FF3333;
	position: absolute;
	bottom:-8px;
	left:50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	font-size: 14px;
	text-align: center;
	line-height: 20px;
	color:#fff;
	font-weight: 900;
}
.iconf {
	font-size: 30px;
	color:#fff;
	margin-top:20px;
}
.img {
	width:40px;
	height:40px;
	border-radius: 50%;
	margin-top:40px;
	background:#fff;
	border:2px solid #fff;
}
.info {
	font-size: 40px;
}
.number {
	font-size: 12px;
	text-align: center;
}
.route {
	width:25px;
	height:25px;
	border: 10px solid #000000;
}
.routeStatus {
	-webkit-animation: keyRoute 1.5s linear infinite;
	        animation: keyRoute 1.5s linear infinite;
}
@-webkit-keyframes keyRoute{
0%{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100%{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}
@keyframes keyRoute{
0%{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100%{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}

